<?xml version="1.0" encoding="utf-8"?>
<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main_page"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:text="ScreenName"
        android:layout_width="wrap_content"
        android:id="@+id/textScreenName"
        android:layout_height="wrap_content"
        android:layout_row="0"
        android:layout_column="0" />

    <EditText
        android:layout_width="241dp"
        android:layout_height="wrap_content"
        android:id="@+id/editScreenName"
        android:layout_weight="1"
        android:layout_row="0"
        android:layout_column="1"
        android:layout_gravity="right" />

    <TextView
        android:text="Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textUserName"
        android:layout_row="1"
        android:layout_column="0" />

    <EditText
        android:layout_width="241dp"
        android:layout_height="wrap_content"
        android:id="@+id/editUserName"
        android:layout_weight="1"
        android:layout_row="1"
        android:layout_column="1"
        android:layout_gravity="right" />

    <TextView
        android:text="Chatroom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textChatRoom"
        android:layout_row="2"
        android:layout_column="0"/>

    <EditText
        android:layout_width="241dp"
        android:layout_height="wrap_content"
        android:id="@+id/editChatRoom"
        android:layout_weight="1"
        android:layout_row="2"
        android:layout_column="1"
        android:layout_gravity="right" />

    <TextView
        android:text="HubPrefix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textHub"
        android:layout_row="3"
        android:layout_column="0" />

    <EditText
        android:layout_width="241dp"
        android:layout_height="wrap_content"
        android:id="@+id/editHub"
        android:layout_weight="1"
        android:layout_row="3"
        android:layout_column="1"
        android:layout_gravity="right" />

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Create Chat"
        android:id="@+id/buttonCreate"
        android:layout_row="4"
        android:layout_column="1" />


</GridLayout>
